@model UserManagement.Web.Models.Logs.LogListViewModel



<h2>Log List</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Id</th>
                <th>Created At</th>
                <th>Type</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.UserId
                    </td>
                    <td>
                        @item.CreatedAt
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        <a class="dropdown-item" asp-controller="Logs" asp-action="View" asp-route-id="@item.Id" class="btn btn-default">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="btn-group" role="group">
        <a asp-controller="Logs" asp-action="List" class="btn btn-default">Show All</a>
        <a asp-controller="Logs" asp-action="List" asp-route-type="Created User" class="btn btn-default">Created User Logs</a>
        <a asp-controller="Logs" asp-action="List" asp-route-type="Updated User" class="btn btn-default">Updated User Logs</a>
        <a asp-controller="Logs" asp-action="List" asp-route-type="Deleted User" class="btn btn-default">Deleted User Logs</a>
    </div>
</div>
