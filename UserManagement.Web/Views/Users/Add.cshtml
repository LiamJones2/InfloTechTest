@model UserManagement.Web.Models.Users.UserListItemViewModel;

<a asp-controller="Users" asp-action="List" class="btn" style="background:#000;color:white; width: 100px;">Back</a>
<form asp-action="PostNewUser" asp-controller="Users" method="post">
    <div>
        <label asp-for="Forename"></label>
        <input asp-for="Forename" />
        <span asp-validation-for="Forename" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Surname"></label>
        <input asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DateOfBirth">Date of Birth:</label>
        <input asp-for="DateOfBirth" type="date" value="2006-01-01">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <button type="submit">Create User</button>
</form>
