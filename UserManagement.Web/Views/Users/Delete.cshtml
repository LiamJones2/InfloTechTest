@model UserManagement.Web.Models.Users.UserListItemViewModel;

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<div>
    <a asp-controller="Users" asp-action="List" class="btn" style="background:#000;color:white; width: 100px;">Back</a>
    <form asp-action="DeleteUser" asp-controller="Users" method="post">
        <div>
            <input asp-for="Id" value="@Model.Id" hidden />
        </div>
        <div>
            <label asp-for="Forename"></label>
            <input asp-for="Forename" readonly value="@Model.Forename" />
        </div>
        <div>
            <label asp-for="Surname"></label>
            <input asp-for="Surname" readonly value="@Model.Surname" />
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" readonly value="@Model.Email" />
        </div>
        <div>
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" readonly value="@Model.DateOfBirth" />
        </div>
        <button type="submit">Delete User</button>
    </form>
</div>


<div class="modal" id="confirmDeleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeConfirmModal">Cancel</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Handle form submission
        $('form').submit(function (e) {
            e.preventDefault(); // Prevent the default form submission

            // Show the confirmation modal
            $('#confirmDeleteModal').modal('show');

            // Handle the confirmation button click
            $('#confirmDeleteButton').on('click', function () {
                // Submit the form when the user confirms the delete
                $('form').off('submit').submit();
            });

            $('#closeConfirmModal').on('click', function () {
                // Submit the form when the user confirms the delete
                $('#confirmDeleteModal').modal('hide');
            });
        });
    });
</script>
