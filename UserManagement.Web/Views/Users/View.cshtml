@model UserManagement.Web.Models.Users.UserDetailsViewModel;

<div>
    <a asp-controller="Users" asp-action="List" class="btn" style="background:#000;color:white; width: 100px;">Back</a>
    <div>
        <a>Forename:</a>
        <a>@Model.Forename</a>
    </div>
    <div>
        <a>Surname:</a>
        <a>@Model.Surname</a>
    </div>
    <div>
        <a>Email:</a>
        <a>@Model.Email</a>
    </div>
    <div>
        <a>Date Of Birth:</a>
        <a>@Model.DateOfBirth</a>
    </div>

    <div>
        <h1>Logs</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Created At</th>
                    <th>Type</th>
                    <th style="width: 1px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.logs)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.CreatedAt
                        </td>
                        <td>
                            @item.Type
                        </td>
                        <td>
                            <a class="dropdown-item" asp-controller="Logs" asp-action="View" asp-route-id="@item.Id" class="btn btn-default">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
